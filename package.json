{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:ui": "npx lerna bootstrap --scope=@soonaverse/ui",
    "build:functions": "npx lerna bootstrap --scope=@soonaverse/functions",
    "build:interfaces": "npx lerna bootstrap --scope=@soonaverse/interfaces",
    "build:lib": "npx lerna bootstrap --scope=@soonaverse/lib",
    "build": "npx lerna bootstrap",
    "clean:functions": "rm -rf packages/functions/interfaces; rm -rf packages/functions/lib",
    "clean:interfaces": "rm -rf packages/interfaces/lib",
    "clean:lib": "rm -rf packages/lib/lib",
    "clean:node_modules": "npx lerna clean --yes; rm -rf node_modules",
    "clean": "npm run clean:node_modules; npm run clean:functions; npm run clean:interfaces; npm run clean:lib",
    "prettier:ui": "npx prettier --write ./packages/ui",
    "prettier:functions": "npx prettier --write ./packages/functions",
    "prettier:interfaces": "npx prettier --write ./packages/interfaces",
    "prettier:lib": "npx prettier --write ./packages/lib",
    "prettier:indexes": "npx prettier --write ./packages/indexes",
    "prettier": "npm run prettier:functions; npm run prettier:interfaces; npm run prettier:indexes; npm run prettier:lib; npm run prettier:ui"
  },
  "devDependencies": {
    "lerna": "^6.0.1"
  }
}
