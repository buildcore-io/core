{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "../packages/interfaces",
    "../packages/sdk"
  ]
}