{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "prod",
      "public": "dist/soonaverse",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "i18n": {
        "root": "/"
      },
      "rewrites": [
        {
          "source": "/de{,/**}",
          "destination": "/de/index.html"
        },
        {
          "source": "/es{,/**}",
          "destination": "/es/index.html"
        },
        {
          "source": "/fr{,/**}",
          "destination": "/fr/index.html"
        },
        {
          "source": "/it{,/**}",
          "destination": "/it/index.html"
        },
        {
          "source": "/tr{,/**}",
          "destination": "/tr/index.html"
        },
        { "source": "**", "destination": "/en/index.html"}
      ]
    },
    {
      "target": "edge",
      "public": "dist/soonaverse",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "i18n": {
        "root": "/"
      },
      "rewrites": [
        {
          "source": "/cs{,/**}",
          "destination": "/cs/index.html"
        },
        {
          "source": "/de{,/**}",
          "destination": "/de/index.html"
        },
        {
          "source": "/es{,/**}",
          "destination": "/es/index.html"
        },
        {
          "source": "/fr{,/**}",
          "destination": "/fr/index.html"
        },
        {
          "source": "/it{,/**}",
          "destination": "/it/index.html"
        },
        {
          "source": "/ja{,/**}",
          "destination": "/ja/index.html"
        },
        {
          "source": "/ko{,/**}",
          "destination": "/ko/index.html"
        },
        {
          "source": "/nl{,/**}",
          "destination": "/nl/index.html"
        },
        {
          "source": "/pl{,/**}",
          "destination": "/pl/index.html"
        },
        {
          "source": "/pt-BR{,/**}",
          "destination": "/pt-BR/index.html"
        },
        {
          "source": "/pt-PT{,/**}",
          "destination": "/pt-PT/index.html"
        },
        {
          "source": "/ru{,/**}",
          "destination": "/ru/index.html"
        },
        {
          "source": "/uk{,/**}",
          "destination": "/uk/index.html"
        },
        {
          "source": "/tr{,/**}",
          "destination": "/tr/index.html"
        },
        {
          "source": "/zn-CN{,/**}",
          "destination": "/zn-CN/index.html"
        },
        {
          "source": "/zn-TW{,/**}",
          "destination": "/zn-TW/index.html"
        },
        { "source": "**", "destination": "/en/index.html"}
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 8095,
      "enabled": false
    },
    "ui": {
      "enabled": true
    }
  }
}
